{
  "name": "NurOS Package List Dev",

  // Указываем Docker Compose, который нужно использовать.
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],

  // Сервис, к которому будет подключен VS Code.
  // Мы выбираем frontend, так как это основная среда для разработки UI.
  "service": "frontend",

  // Рабочая папка внутри контейнера.
  "workspaceFolder": "/app",

  // Настройки для VS Code.
  "customizations": {
    "vscode": {
      // Список расширений, которые будут автоматически установлены в контейнере.
      "extensions": [
        "dbaeumer.vscode-eslint",     // ESLint для подсветки ошибок
        "esbenp.prettier-vscode",     // Prettier для форматирования кода
        "solidjs.solid",              // Поддержка Solid.js
        "ms-python.python",           // Поддержка Python (для backend-скриптов)
        "ms-azuretools.vscode-docker" // Управление Docker-контейнерами
      ]
    }
  },

  // Проброс портов из контейнера на локальную машину.
  "forwardPorts": [5173],

  // Команда, которая выполнится один раз после создания контейнера.
  // Устанавливаем все зависимости в monorepo.
  "postCreateCommand": "pnpm install",

  // При закрытии VS Code останавливаем все сервисы docker-compose.
  "shutdownAction": "stopCompose"
}
